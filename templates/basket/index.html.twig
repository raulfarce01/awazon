{% extends 'base.html.twig' %}

{% block title %}Compra realizada!{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center align-items-center flex-column pt-5">

        <p class="fs-3">
            Thanks for buying some of our products, {{ app.user.name }}!!
        </p>

        <a href="{{ asset('item/' ~ item.url ) }}" class="text-decoration-none text-light">
            <button class="btn btn-success">
                Return 
            </button>
        </a>

        <h3 class="mt-3">Your item</h3>

        <div id="container" class="d-flex flex-wrap p-3 px-4 mx-3 justify-content-center">
        
                <div class="{% if item.important %} d-flex justify-content-around flex-row {% else %}  {% endif %} card my-1 mx-2 p-0" style="{% if item.important %} width: 36rem; {% else %} width: 18rem; {% endif %} min-height:350px;">
                    <div class="bg-danger-subtle mx-0 {% if item.important %} h-100 w-50 {% else %}  {% endif %}" style="{% if item.important %} {% else %} height: 45%; {% endif %}">
                            <img src="{{ asset('uploads/user_pictures/' ~ item.portada) }}" class="card-img-top object-fit-cover h-100 w-100" alt="Not found"/>
                    </div>
                    <div class="position-relative card-body {% if item.important %} w-50 {% else %} h-50 {% endif %}" class="card-img-top object-fit-cover h-100" alt="Not found">
                        <h5 class="card-title">{{ item.name | upper }}</h5>
                        <p class="card-text">{{ item.description|length > 50 ? item.description|slice(0, 50) ~ '...' : item.description  }}</p>
                        <p class="card-text">{{ item.price ~ "â‚¬" }}</p>
                        <div class="w-100 d-flex justify-content-end me-2 position-absolute" style="bottom: 10px; right: 5px;">
                        </div>
                    </div>
                </div>
        

    </div>

{% endblock %}
