{% extends 'base.html.twig' %}

{% block title %}Item Dedicated Page{% endblock %}

{% block body %}

  <div id="removeContainer" class="w-100 d-flex justify-content-end">
    <a href="{{ asset('insert/image/' ~ item.id) }}"><button type="button" class="btn btn-success me-2 my-3">Images</button></a>
    <a href="{{ asset('remove/item/' ~ item.id) }}"><button type="button" class="btn btn-danger me-3 my-3">Remove item</button></a>
  </div>

  <div id="container" class="d-flex justify-content-around align-items-center container"> 
  
    <div id="carouselExample" class="carousel slide me-2" style="height:60vh; width:40vw;">
        <div class="carousel-inner">
          {% for image in images %}

          <div class="carousel-item active">
              <img src="{{ asset('uploads/user_pictures/' ~ image.route ) }}" style="width: 40vw; height: 60vh;" class="d-block" alt="...">
          </div>

          {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        </div>

    <div id="dataContainer" class="w-50 ms-3">

      {{ form(form) }}

    </div>

  </div>

{% endblock %}