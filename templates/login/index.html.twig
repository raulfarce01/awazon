{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container">
        <form action="{{ path('app_login') }}" class="mt-5" method="post">

            <p id="titleLogin" class="fs-3 fw-bold text-center text-success">Log In</p>

            <div id="usernameLogin" class="mb-3">
                <label for="username" class="form-label">Email:</label>
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}">
            </div>

            <div id="passLogin" class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" id="password" class="form-control" name="_password">
            </div>
            <input type="hidden" name="_target_path" value="/">

            <div id="buttonsLogin" class="w-100 d-flex">
                <button type="submit" class="w-50 btn btn-light border-success-subtle me-1">login</button>
                <a href="{{ path('userRegistration') }}" class="w-50 btn btn-success ms-1">Sign Up</a>
            </div>
        </form>
    </div>
{% endblock %}